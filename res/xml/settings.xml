<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.hlidskialf.android.preference.SeekBarPreference
        min="1"
        android:defaultValue="10"
        android:key="ping_interval"
        android:max="120"
        android:summary="%d Minutes between pings"
        android:text=" minutes"
        android:title="Ping interval" />
    <com.hlidskialf.android.preference.SeekBarPreference
        android:defaultValue="7"
        android:key="aware_checks"
        android:max="100"
        android:summary="%d Percentage aware reports"
        android:text=" percent"
        android:title="Aware reports" />

    <CheckBoxPreference
        android:key="is_sound_enabled"
        android:summaryOff="Sound off"
        android:summaryOn="Sound on"
        android:title="Ping sound" />
    <CheckBoxPreference
        android:key="is_vibration_enabled"
        android:summaryOff="Vibration disabled"
        android:summaryOn="Vibration enabled"
        android:title="Ping vibration" />

</PreferenceScreen>